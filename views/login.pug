extends layout

block layout-content
  div.container-fluid.login-bg.d-flex.align-items-center.justify-content-center
    .card(style='width: 23rem; padding: 2rem')
        .card-body(style="padding: 0;")
            h4.card-title.text-center Admin - Panel
            form(action="/login", method="post")
                
                .form-group
                    label(for='username') Username
                    input#username.form-control(type='text' name="username" placeholder='Username...', required)
                .form-group
                    label(for='password') Password
                    input#password.form-control(type='password' name="password" placeholder='Password...', required)
                if err
                    small(style="color: red;") #{err}
                .form-group.form-check
                button.btn.btn-primary(type='submit') Login
